{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "removeComments": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}